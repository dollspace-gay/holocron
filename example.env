# Holocron Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys (at least one required for LLM features like grading)
# =============================================================================

# Google Gemini (recommended - good balance of cost/quality)
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# LLM Settings
# =============================================================================

# Default model to use (examples: gpt-4, gpt-3.5-turbo, claude-3-opus, gemini-pro)
HOLOCRON_DEFAULT_MODEL=gemini-pro

# Temperature for LLM responses (0.0 = deterministic, 1.0 = creative)
HOLOCRON_TEMPERATURE=0.7

# Maximum tokens for LLM responses
HOLOCRON_MAX_TOKENS=2048

# =============================================================================
# Web GUI Settings
# =============================================================================

# Host to bind the web server to
HOLOCRON_WEB_HOST=127.0.0.1

# Port for the web server
HOLOCRON_WEB_PORT=8080

# =============================================================================
# Database Settings
# =============================================================================

# Path to SQLite database (default: ~/.holocron/learner.db)
# HOLOCRON_DB_PATH=/path/to/your/database.db

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
HOLOCRON_LOG_LEVEL=INFO
